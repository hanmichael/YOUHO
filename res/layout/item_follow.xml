<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" >

        <ImageView
            android:id="@+id/FollowItem_BrandImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/FollowItem_LikeImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/likebutton_p" />

        <TextView
            android:id="@+id/FollowItem_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/FollowItem_LikeImg"
            android:background="@drawable/vip_bg"
            android:gravity="center"
            android:text="推荐"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/FollowItem_NameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/FollowItem_Tv"
            android:layout_toRightOf="@+id/FollowItem_BrandImg"
            android:singleLine="true"
            android:text="Nike"
            android:textColor="#000000" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/FollowItem_PriceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:textColor="#00ffff" />

            <TextView
                android:id="@+id/FollowItem_DistanceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/FollowItem_PriceTv"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/FollowItem_Img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/FollowItem_DistanceTv"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/FollowItem_PriceTv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:textColor="#00ffff" />

            <TextView
                android:id="@+id/FollowItem_DistanceTv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/FollowItem_PriceTv1"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/FollowItem_Img1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/FollowItem_DistanceTv1"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/FollowItem_PriceTv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:textColor="#00ffff" />

            <TextView
                android:id="@+id/FollowItem_DistanceTv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/FollowItem_PriceTv2"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/FollowItem_Img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/FollowItem_DistanceTv2"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>