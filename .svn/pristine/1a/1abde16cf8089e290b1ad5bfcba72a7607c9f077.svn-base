<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_banner"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".LoginActivity" >

    <Button
        android:id="@+id/loginAct_BoysBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/boy_bg" />

    <Button
        android:id="@+id/loginAct_GrilsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginAct_BoysBtn"
        android:layout_marginTop="20dp"
        android:background="@drawable/girls_bg" />

    <Button
        android:id="@+id/loginAct_KidsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginAct_GrilsBtn"
        android:layout_marginTop="20dp"
        android:background="@drawable/kids_bg" />

    <Button
        android:id="@+id/loginAct_LifeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginAct_KidsBtn"
        android:layout_marginTop="20dp"
        android:background="@drawable/life_bg" />

</RelativeLayout>