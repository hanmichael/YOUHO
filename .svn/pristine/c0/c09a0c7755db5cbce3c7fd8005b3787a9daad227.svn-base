<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp" >

        <TextView
            android:id="@+id/GoodsList_DisTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="ï¿¥56"
            android:textColor="#ff0000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/GoodsList_PriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/GoodsList_DisTv"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/GoodsList_TitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/GoodsList_DisTv"
            android:singleLine="true"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/GoodsList_Img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/GoodsList_TitleTv"
            android:scaleType="fitXY" />
    </RelativeLayout>

</LinearLayout>